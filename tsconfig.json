{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2020",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "types": [
      "node",
      "@types/node",
      "vite/client"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@utils/*": [
        "src/core/utils/*"
      ],
      "@ui/*": [
        "src/ui/*"
      ],
      "@components/*": [
        "src/ui/components/*"
      ],
      "@views/*": [
        "src/ui/views/*"
      ],
      "@layouts/*": [
        "src/ui/layouts/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ]
    }
  },
  "include": [
    "./src",
    "./types"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "cypress"
  ]
}
